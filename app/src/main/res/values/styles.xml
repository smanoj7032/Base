<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonSolid" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="ButtonStroke" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextStroke" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_item</item>
    </style>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextView.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextView.SubHeader">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextView.Thin">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <style name="TextView.Light">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextView.Red">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/sahes_gray_600</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>


    <!--DIALOGS-->
    <style name="MaterialDialog">
        <item name="android:textColor">@color/material_dialog_title_text_color</item>
    </style>

    <!-- Theme for Dialog Title -->
    <style name="MaterialDialog.Title">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Theme for Dialog Message -->
    <style name="MaterialDialog.Message">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/material_dialog_message_text_color</item>
    </style>

    <!-- Theme for Dialog Positive Button -->
    <style name="MaterialDialog.PositiveButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Theme for Dialog Negative Button -->
    <style name="MaterialDialog.NegativeButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <!-- Theme for BottomSheetDialog -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_sheet_white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#00FFFFFF</item>
    </style>
</resources>